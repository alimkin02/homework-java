<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateOrderActivity">

    <TextView
        android:id="@+id/createTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Создание нового заказа"
        android:textColor="#000000"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createTitle"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:text="Фирма"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:text="Тип"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="40sp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:text="Откуда"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="80sp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:text="Куда"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="120sp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:text="Стоимость"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="160sp"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:text="Хрупкость"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="200sp"/>

        <EditText
            android:id="@+id/inputCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:ems="12"
            android:inputType="text"
            android:text="Yandex"
            android:textSize="14sp"
            android:layout_marginTop="-5sp"/>


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="40dp"/>
        <EditText
            android:id="@+id/inputFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="72sp"
            android:ems="12"
            android:inputType="text"
            android:text="Moscow"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/inputTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="115sp"
            android:ems="12"
            android:inputType="text"
            android:text="SPB"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="numberSigned"
            android:layout_marginStart="170dp"
            android:layout_marginTop="150sp"/>

        <CheckBox
            android:id="@+id/checkBoxFragile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="200sp"
            android:buttonTint="@color/blue"/>

        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxFragile"
            android:layout_marginStart="40sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="onCreateOrder"
            android:text="Создать заказ"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</RelativeLayout>